<?xml version="1.0" encoding="utf-8"?>
<templates id="roomdoo_reservation_modal" xml:space="preserve">
    <t t-name="pms_pwa.pms_pwa_roomdoo_payment_form">
        <div class="modal fade o_pms_pwa_right pms_pwa_roomdoo_payment_form o_pms_pwa_reservation_modal" tabindex="-1" data-backdrop="static" role="dialog" id="pms_pwa_roomdoo_payment_form" aria-labelledby="pms_pwa_roomdoo_payment_form" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header o_pms_pwa_modal_header">
                        <div class="col-12">
                            <div class="row o_pms_pwa_modal_header_pad">
                                <a class="mr-4 o_pms_pwa_return" t-attf-data-id="{{data.reservation_id}}" href="#"><i class="fa fa-arrow-left"></i> Volver</a>
                                <h4 class="modal-title">
                                    Por facturar: <t t-esc="data.total_to_invoice"></t>
                                    <span>Total <t t-esc="data.total_amount"></t></span>
                                </h4>
                                <a
                                    t-att-href="'/reservation/' + data.reservation_id"
                                    style="margin:1px; color: #01b6e3; border-color: #01b6e3; background-color: #daf7fc; margin-left: 10px;"
                                    class="col-3 btn btn-secondary o_pms_pwa_abutton o_pms_pwa_button_preloader"
                                    t-att-data-id="data.reservation_id"
                                    target="_blank"
                                >
                                    Ver Detalle
                                </a>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span class="fa fa-times" />
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body o_pms_pwa_modal_body">
                        <div class="card-body bg-dark" t-if="data.invoice_ids">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="o_pms_pwa_theme_color">Factura</th>
                                        <th class="o_pms_pwa_theme_color">Cliente</th>
                                        <th class="o_pms_pwa_theme_color">Cantidad</th>
                                        <th class="o_pms_pwa_theme_color text-right"></th>
                                        <th class="o_pms_pwa_theme_color text-right"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="data.invoice_ids" t-as="line">
                                        <tr class="o_pms_pwa_payment_invoice_lines">
                                            <td><t t-esc="line.name"></t></td>
                                            <td><t t-esc="line.partner"></t></td>
                                            <td><t t-esc="line.amount"></t></td>
                                            <td>Imprimir</td>
                                            <td><a t-attf-href="{{ line.url }}" >Ver Detalle</a></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <hr t-if="data.invoice_ids"/>
                        <div class="form-group" t-if="data.new_invoice">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="o_pms_pwa_theme_color">Descripción</th>
                                        <th class="o_pms_pwa_theme_color">Cantidad</th>
                                        <th class="o_pms_pwa_theme_color">Importe</th>
                                        <th class="o_pms_pwa_theme_color">Incluir</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="data.new_invoice.lines" t-as="line">
                                        <tr class="o_pms_pwa_lines_to_invoice" t-att-data-id="line.id">
                                            <td data-field="description"><span class="o_pms_pwa_description" t-esc="line.description"/> <i class='pms_pwa_payment_edit fa fa-edit'/></td>
                                            <td data-field="qty_to_invoice"><span class="o_pms_pwa_qty_to_invoice" t-esc="line.qty_to_invoice"/>  <i class='pms_pwa_payment_edit fa fa-edit'/>/<span class="o_pms_pwa_max_qty" t-esc="line.max_qty"/></td>
                                            <td><t t-esc="line.amount"/></td>
                                            <td><input class="form-control o_pms_pwa_included" type="checkbox" name="included" t-att-checked="line.included ? 'checked' : None"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <form class="o_pms_pwa_payment_form form-group form-field mt5">
                            <div class="row mt-3">
                                <div class="col-sm-12">
                                    <h4>Nueva factura</h4>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-8">
                                    <label class="control-label col-6" for="partner">
                                        Cliente
                                    </label>
                                    <input class="form-control o_pms_pwa_search_partner" data-supplier="true" type="text" required="required" name="partner_name" placeholder="A nombre de... (búsqueda por tlf, mail o nif)" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.name ? data.new_invoice.partner.name : None" />
                                    <input type="hidden" name="partner" t-att-value="data.new_invoice and data.new_invoice.partner ? data.new_invoice.partner.id : None" />
                                    <input
                                        class="form-control" type="hidden" name="reservation_id" t-att-value="data.reservation_id"/>
                                </div>
                                <div class="col-sm-4">
                                    <a class="o_pms_pwa_reset_form btn btn-message">Nuevo</a>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-6">
                                    <label class="control-label col-12" for="partner_type">
                                        Tipo
                                    </label>
                                    <select class="form-control" id="partner_type_change" name="partner_type">
                                        <option value="person" t-att-selected="(data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.partner_type === 'person') ? 'selected' : None">Individual</option>
                                        <option value="company" t-att-selected="(data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.partner_type === 'company') ? 'selected' : None">Compañía</option>
                                        <option value="agency" t-att-selected="(data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.partner_type === 'agency') ? 'selected' : None">Agencia</option>
                                    </select>
                                </div>
                                <div class="col-sm-6" >
                                    <label class="control-label col-6" for="vat">
                                        CIF
                                    </label>
                                    <input
                                        class="form-control" type="text" name="vat" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.vat ? data.new_invoice.partner.vat : None" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-12">
                                    <label class="control-label col-6" for="partner_name">
                                        Nombre
                                    </label>
                                    <input
                                        class="form-control" type="text" name="partner_name" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.name ? data.new_invoice.partner.name : None" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-12">
                                    <label class="control-label col-6" for="partner_invoice_street">
                                        Dirección
                                    </label>
                                    <input
                                        class="form-control" type="text" name="partner_invoice_street" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.invoice_street ? data.new_invoice.partner.invoice_street : None" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-6">
                                    <label class="control-label col-6" for="partner_invoice_zip">
                                        C.P
                                    </label>
                                    <input
                                        class="form-control" type="text" name="partner_invoice_zip" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.invoice_zip ? data.new_invoice.partner.invoice_zip : None" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label col-6" for="partner_invoice_country_id">
                                        Pais
                                    </label>
                                    <input autocomplete="off" class="form-control o_pms_pwa_search_country_name" type="text" name="partner_invoice_country_name" placeholder="País" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.invoice_country_name ? data.new_invoice.partner.invoice_country_name : None" />
                                    <input type="hidden" name="partner_invoice_country_id" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.invoice_country_id ? data.new_invoice.partner.invoice_country_id : None" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-6">
                                    <label class="control-label col-6" for="partner_invoice_state_id">
                                        Provincia
                                    </label>
                                    <input
                                        class="form-control" type="text" name="partner_invoice_state_id" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.invoice_state_id ? data.new_invoice.partner.invoice_state_id : None" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label col-6" for="partner_invoice_city">
                                        Ciudad
                                    </label>
                                    <input
                                        class="form-control" type="text" name="partner_invoice_city" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.invoice_city ? data.new_invoice.partner.invoice_city : None" />
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-6">
                                    <label class="control-label col-6" for="partner_email">
                                        Email
                                    </label>
                                    <input
                                        class="form-control" type="text" name="partner_email" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.email ? data.new_invoice.partner.email : None" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label col-6" for="partner_mobile">
                                        Teléfono
                                    </label>
                                    <input
                                        class="form-control" type="text" name="partner_mobile" t-att-value="data.new_invoice and data.new_invoice.partner and data.new_invoice.partner.mobile ? data.new_invoice.partner.mobile : None" />
                                </div>
                            </div>
                        </form>
                        <div class="container-fluid">
                            <div class="row mt-3 mb-3">
                                <div class="col-sm-12 text-center">
                                    <a class="btn btn-message o_pms_pwa_send_form">Confirmar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
