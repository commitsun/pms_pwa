                            <!-- select calendar type -->
                            <div
                              class="col-6 col-md-3 col-lg-2 col-xl-3 pr-0"
                            >
                                Calendario:
                                <div class="o_pms_pwa_calendar_select">
                                    <select
                                      id="calendar_select"
                                      name="calendar_select"
                                      class="form-control o_website_form_input o_input"
                                      onchange="if (this.value) window.location.href=this.value"
                                    >
                                        <option value="" selected="selected">Configuración de precios</option>
                                        <option value="/calendar">Calendario de reservas</option>
                                    </select>
                                </div>
                            </div>

                            <!-- select pricelist -->
                            <div
                              class="col-6 col-md-3 col-lg-2 col-xl-3 pr-0"
                            >
                                Tarifa:
                                <form method="post" action="/calendar/config">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="selected_date" t-att-value="selected_date.strftime('%d/%m/%Y')"/>
                                    <select
                                        id="pricelist_select"
                                        name="pricelist"
                                        class="form-control o_website_form_input o_input"
                                        onchange="javascript:this.form.submit()"
                                    >
                                        <t t-foreach="pricelist" t-as="price">
                                            <t t-if="default_pricelist==price.id">
                                                <option t-attf-value="{{ price.id }}" selected="selected">
                                                    <t t-esc="price.name" />
                                                </option>
                                            </t>
                                            <t t-else="">
                                                <option t-attf-value="{{ price.id }}">
                                                    <t t-esc="price.name" />
                                                </option>
                                            </t>
                                        </t>

                                    </select>
                                </form>
                            </div>


                            <!-- select availability plan -->
                            <div
                              class="col-6 col-md-3 col-lg-2 col-xl-3 pr-0"
                            >
                                Plan de disp.:
                                <form method="post" action="/calendar/config">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="selected_date" t-att-value="selected_date.strftime('%d/%m/%Y')"/>
                                    <select
                                        id="availability_plan_select"
                                        name="availability_plan"
                                        class="form-control o_website_form_input o_input"
                                        onchange="javascript:this.form.submit()"
                                    >
                                        <t t-foreach="availability_plan" t-as="av_plan_item">
                                            <option
                                              t-attf-value="{{ av_plan_item.id }}"
                                              t-att-selected="default_availability_plan==av_plan_item.id"
                                            >
                                                <t t-esc="av_plan_item.name" />
                                            </option>
                                        </t>
                                    </select>
                                </form>
                            </div>


                            <!-- col just to fill -->
                            <div class="col-6 d-none d-md-block d-lg-none d-xl-none pt-2"/>


                            <!-- select days to view -->
                            <!-- <div class="col-6 col-md-3 col-lg-1 col-xl-1 pr-0">
                                Días:
                                <form method="post" action="">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                    <input type="hidden" name="display_option" t-att-value="selected_display"/>
                                    <input type="hidden" name="pricelist" t-att-value="default_pricelist"/>
                                    <input type="hidden" name="selected_date" t-att-value="selected_date.strftime('%d/%m/%Y')"/>

                                    <select id="dpr" name="dpr" class="form-control o_website_form_input o_domain_leaf_operator_select o_input" onchange="javascript:this.form.submit()">
                                        <t t-foreach="dpr_select_values" t-as="show_days">
                                            <t t-if="int(dpr)==int(show_days)">
                                                <option t-attf-value="{{ show_days }}" selected="selected">
                                                    <t t-esc="show_days" />
                                                </option>
                                            </t>
                                            <t t-else="">
                                                <option t-attf-value="{{ show_days }}">
                                                    <t t-esc="show_days" />
                                                </option>
                                            </t>
                                        </t>
                                    </select>
                                </form>
                            </div> -->
                            <!-- select date -->
                            <div class="col-6 col-md-3 col-lg-2 col-xl-2 pr-0">
                                <span class="d-block">Fecha:</span>
                                <div class="o_pms_pwa_month_select form-control px-0">

                                    <a
                                    t-attf-href="?previous_month={{date_start.strftime('%d/%m/%Y')}}&amp;display_option={{selected_display}}&amp;pricelist={{default_pricelist}}"
                                    class="mx-2 o_pms_pwa_calendar_arrow"
                                    >
                                        <i class="fa fa-angle-left"/>
                                    </a>
                                    <!-- <span class="o_pms_pwa_month_select_calendar_icon">
                                        <img src="/pms_pwa/static/img/svg/calendario-azul.svg" alt="calendar icon" title="calendar icon" />
                                    </span> -->
                                    <input type="hidden" name="calendar_selected_date" t-value="date_start" />
                                    <button type="button" class="btn btn-calendar-roomdoo o_pms_pwa_daterangepicker_calendar" data-dismiss="modal">
                                        <t t-esc="date_start" t-options='{"widget": "date", "format": "MMMM dd"}' />
                                    </button>

                                    <a
                                        t-attf-href="?next_month={{date_start.strftime('%d/%m/%Y')}}&amp;display_option={{selected_display}}&amp;pricelist={{default_pricelist}}"
                                        class="mx-2 o_pms_pwa_calendar_arrow"
                                    >
                                        <i class="fa fa-angle-right"/>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive" style="height: calc(90vh - 25px);">
                            <input type="hidden" name="date_list" t-attf-value="{{ date_list }}" />
                            <table id="calendar_config_table" class="table o_pms_pwa_reservation_list_table" data-show-columns="true">
                                <thead>
                                    <tr>
                                        <th
                                          class="align-self-end o_pms_pwa_table_week o_pms_pwa_table_first_header_td"
                                          style="z-index: none !important; background-color: white !important;"
                                        >
                                        <div id="buttom_save">

                                            <button
                                                id="save"
                                                name="save"
                                                class="btn btn-radius btn-pms_pwa w-100 "
                                            >
                                                Save
                                            </button>
                                        </div>

                                        </th>
                                        <t t-foreach="date_list" t-as="day">
                                            <th t-att-class="'text-center o_pms_pwa_table_week '
                                                    + ('o_pms_pwa_today ' if today.strftime('%d/%m/%Y')==day.strftime('%d/%m/%Y') else ' ')
                                                    + ('o_pms_pwa_weekend ' if int(day.strftime('%w'))==5 else ' ')
                                                    + ('o_pms_pwa_weekend ' if int(day.strftime('%w'))==6 else ' ')
                                                    " t-att-data-value="x" style="padding-bottom:0;">
                                                <t t-set="property_total_day_reservations" t-value="user_id.pms_pwa_property_id.with_context(checkin=day, checkout=day+relativedelta(days=1))._get_occupied_reservations()"></t>
                                                <t t-set="property_total_out_service" t-value="user_id.pms_pwa_property_id.with_context(checkin=day, checkout=day+relativedelta(days=1))._get_occupied_out_service()"></t>
                                                <t t-set="availability_day" t-value="user_id.pms_pwa_property_id.with_context(checkin=day, checkout=day+relativedelta(days=1), pricelist_id=default_pricelist, overnight_rooms=True).availability"></t>
                                                <t t-set="total_rooms" t-value="user_id.pms_pwa_property_id._get_total_rooms()"/>
                                                <t t-set="percent_occupied" t-value="(property_total_day_reservations + property_total_out_service) * 100 / total_rooms"></t>
                                                <span style="font-size:13px;">
                                                    <t t-esc="day" t-options='{"widget": "date", "format": "EEE dd, MMM"}' />
                                                </span>
                                                <!-- <t t-if="day_last">
                                                    <a t-attf-href="?next_day={{date_start.strftime('%d/%m/%Y')}}&amp;display_option={{selected_display}}&amp;pricelist={{default_pricelist}}&amp;dpr={{dpr}}" class="float-right o_pms_pwa_calendar_arrow"><i class="fa fa-2x fa-angle-right"></i></a>
                                                </t> -->
                                                <div class="row percentage-container">
                                                    <span t-if="percent_occupied == 100" style="width:100%">
                                                        <div style="col border-radius: 5%; background-color:rgb(252, 123, 147); margin-right:2px; margin-left:3px; height:5px;"/>
                                                    </span>
                                                    <span t-if="percent_occupied &gt; 74 and percent_occupied &lt; 100" style="width:100%">
                                                        <div style="col border-radius: 5%; background-color:rgb(255, 202, 153); margin-right:20px; margin-left:3px; height:5px;"/>
                                                    </span>
                                                    <span t-if="percent_occupied &gt; 49 and percent_occupied &lt; 75" style="width:100%">
                                                        <div style="col border-radius: 5%; background-color:rgb(255, 224, 153); margin-right:40px; margin-left:3px; height:5px;"/>
                                                    </span>
                                                    <span t-if="percent_occupied &gt; 24 and percent_occupied &lt; 50" style="width:100%">
                                                        <div style="col border-radius: 5%; background-color:rgb(207, 255, 153); margin-right:60px; margin-left:3px; height:5px;"/>
                                                    </span>
                                                    <span t-if="percent_occupied &gt; 0 and percent_occupied &lt; 25" style="width:100%">
                                                        <div style="col border-radius: 5%; background-color:rgb(171, 255, 153); margin-right:80px; margin-left:3px; height:5px;"/>
                                                    </span>
                                                    <span t-if="percent_occupied == 0" style="width:100%">
                                                        <div style="col border-radius: 5%; background-color:rgb(207 255 153 / 0%); margin-right:80px; margin-left:3px; height:5px;"/>
                                                    </span>
                                                </div>
                                                <div class="float-center">
                                                    <t t-esc="percent_occupied"  t-options="{'widget': 'float', 'precision': 0}"/> %
                                                </div>
                                            </th>
                                        </t>
                                    </tr>

                                </thead>
                                <tbody>
                                    <t t-foreach="rooms_list" t-as="obj">
                                        <t t-set="total_rooms" t-value="obj._get_total_rooms(current_property)"></t>
                                        <tr class="o_pms_pwa_open_calendar_config" t-attf-data-id="{{ obj.id }}">
                                            <td class="o_pms_pwa_table_first_header_td">
                                                <p class="o_pms_pwa_room_name">
                                                    <t t-if="obj.default_code" t-esc="obj.default_code" />
                                                    <span class="o_pms_pwa_title" style="text-align: center !important;">
                                                        (<t t-esc="total_rooms" />)
                                                    </span>
                                                </p>
                                            </td>
                                            <t t-foreach="len(date_list)" t-as="l">
                                                <t t-set="availability_room" t-value="obj.with_context(checkin=date_list[l], checkout=date_list[l]+relativedelta(days=1), pms_property_id=current_property)._get_availability_rooms(current_property)"/>
                                                <t t-set="rooms_occupied_reservations" t-value="obj.with_context(checkin=date_list[l], checkout=date_list[l]+relativedelta(days=1))._get_occupied_reservations(current_property)"></t>
                                                <t t-set="rooms_occupied_out_service" t-value="obj.with_context(checkin=date_list[l], checkout=date_list[l]+relativedelta(days=1))._get_occupied_out_service(current_property)"></t>
                                                <t t-set="sale_avail" t-value="obj.with_context(date=date_list[l], pricelist_id=select_pricelist.id, availability_plan_id=select_availability_plan.id, pms_property_id=current_property)._get_sale_avail()"></t>
                                                <t t-set="percent_avail" t-value="availability_room * 100 / total_rooms"></t>
                                                <td t-att-class="'o_config_pms_pwa_table_cell '
                                                    + ('o_pms_pwa_dispo_0' if availability_room==0 else ' ')
                                                    + ('o_pms_pwa_dispo_1' if availability_room==1 else ' ')
                                                "
                                                    style="padding: 0 !important;"
                                                >
                                                <!--<p class="o_pms_pwa_title" style="text-align: center !important;">-->
                                                <!--    <t t-esc="availability_room"/> de <t t-esc="total_rooms" />-->
                                                <!--/p>-->
                                                    <p class="calendar_config_input" style="text-align:center; padding-bottom:0; margin-bottom:0;">
                                                        <input
                                                        t-attf-data-room="{{ obj.id }}"
                                                        t-attf-data-pricelist="{{ select_pricelist.id }}"
                                                        t-attf-data-availability_plan="{{ select_availability_plan.id }}"
                                                        t-attf-data-date="{{ date_list[l] }}"
                                                        data-edit="false"
                                                        t-attf-tabindex="{{ select_pricelist.id }}1{{l}}"
                                                        style="width:35%; border:0; margin-top:2px; color: $black !important; font-weight: bold !important;"
                                                        type="text"
                                                        t-att-value="obj.product_id.with_context(quantity=1, consumption_date=date_list[l], pricelist=select_pricelist.id, property=current_property).price"
                                                        name="price"
                                                        />
                                                    </p>
                                                    <p class="o_pms_pwa_title" style="text-align: center !important; margin-bottom: 0px !important;">
                                                        <t t-esc="availability_room"/> Libres
                                                    </p>
                                                    <div class="circles-container text-center row m-0 mt-2 p-0 " style="">
                                                        <div class="col-4 m-0 pt-1 p-0 row align-items-center justify-content-center"
                                                            title="Reservas" style="padding-bottom: 2px !important; padding-top: 0 !important;"
                                                        >
                                                            <div t-if="rooms_occupied_reservations > 0" class="circle" style="-0.6rem !important;">
                                                                <span >
                                                                    <t t-esc="rooms_occupied_reservations"/>
                                                                </span>
                                                            </div>
                                                            <div t-else="" style="min-height: 25px;">
                                                            </div>
                                                        </div>
                                                        <div class="col-4 m-0 pt-1 p-0 row align-items-center justify-content-center"
                                                            title="Fuera de servicio" style="padding-bottom: 2px !important; padding-top: 0 !important;"
                                                        >
                                                            <div t-if="rooms_occupied_out_service > 0" class="circle" style="-0.6rem !important;">
                                                                <span >
                                                                    <t t-esc="rooms_occupied_out_service"/>
                                                                </span>
                                                            </div>
                                                            <div t-else="" style="min-height: 25px;">
                                                            </div>
                                                        </div>
                                                        <div class="col-4 m-0 pt-1 p-0 row align-items-center justify-content-center"
                                                            title="A la venta"
                                                        >
                                                            <div t-if="sale_avail > 0"  class="circle" style="-0.6rem !important;">
                                                                <span>
                                                                    <t t-esc="sale_avail"/>
                                                                </span>
                                                            </div>
                                                            <div t-if="sale_avail == 0"  class="circle" style="-0.6rem !important; background-color: rgb(252, 123, 147); color: white;">
                                                                <span>
                                                                    <t t-esc="sale_avail"/>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- <div class="row availabilitys-container">
                                                        <div class="col-6 availability-group text-center">
                                                            <div>
                                                                <span class="availability-value">
                                                                    24
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="col-6 availability-group text-center">
                                                            <div>
                                                                <span class="availability-value">
                                                                    13
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div> -->
                                                </td>
                                            </t>
                                        </tr>
                                        <tr>
                                            <td
                                              t-att-colspan="len(date_list)+1"
                                              t-attf-aria-labelledby="{{ obj.id }}"
                                              style="width:100% !important; padding-top: 0;"
                                            >
                                                <table class="table subtable" id="calendar_conf_table_line" style="margin-bottom: 0;  padding-top: 0;">
                                                    <t t-foreach="select_pricelist" t-as="price">
                                                        <tr t-attf-data-id="{{ price.id }}" >
                                                            <td
                                                              class="o_pms_pwa_show_table"
                                                              style=" padding-top: 0; padding-left: 0;"
                                                              data-toggle="collapse"
                                                              t-attf-data-target="#collapse_2_accordion_{{price.id}}"
                                                              aria-expanded="true"
                                                              aria-controls="collapse_2_accordion_{{price.id}}"
                                                            >
                                                                <!-- <p style="text-align:end; height:28px;">
                                                                    <span style="min-width:80px !important;">Precio</span>
                                                                </p> -->
                                                                <p style="text-align:end; height:28px; ">
                                                                    <span style="min-width:80px !important;">Cupo</span>
                                                                </p>
                                                                <p style="text-align:end; height:28px;">
                                                                    <span style="min-width:80px !important;">Est. Mín</span>
                                                                </p>
                                                                <p style="text-align:right; height:45px; margin-bottom:0">
                                                                    <i class="fa fa-angle-down ml-2"
                                                                        style="background-color: black;
                                                                            height: 15px;
                                                                            width: 15px;
                                                                            border-radius: 50%;
                                                                            padding-right: 2.7px !important;
                                                                            color: white;
                                                                            cursor: pointer;">
                                                                    </i>
                                                                </p>
                                                                <div class="collapse" t-attf-id="collapse_2_accordion_{{price.id}}" t-attf-aria-labelledby="{{ price.id }}">
                                                                    <p style="text-align:end; height:28px;">
                                                                        <span style="min-width:80px !important;">Máx. Disp.</span>
                                                                    </p>
                                                                    <p style="text-align:end; height:28px;">
                                                                        <span style="min-width:80px !important;">Est. Máx</span>
                                                                    </p>
                                                                    <p style="text-align:end; height:28px;">
                                                                        <span style="min-width:80px !important;">Est. Máx Sa.</span>
                                                                    </p>
                                                                    <p style="text-align:end; height:28px;">
                                                                        <span style="min-width:80px !important;">Est. Máx Ll.</span>
                                                                    </p>
                                                                    <p style="text-align:end; height:28px;">
                                                                        <span style="min-width:80px !important;">Cerrar Ll.</span>
                                                                    </p>

                                                                </div>

                                                            </td>

                                                            <t t-foreach="len(date_list)" t-as="room_day">
                                                                <t t-set="list_price" t-value="obj.with_context(date=date_list[room_day], pricelist_id=price.id, availability_plan_id=select_availability_plan.id, pms_property_id=current_property)._get_rules_date()"></t>
                                                                <td t-att-class="'o_config_pms_pwa_table_cell '
                                                                    + ('o_pms_pwa_dispo_0 ' if list_price['closed'] else ' ')"
                                                                    t-attf-data="{{ room_day }}"  style="padding-top: 0;">
                                                                    <!-- <p style="text-align:center;margin-right: 0.25rem;">
                                                                        <input
                                                                          t-attf-data-room="{{ obj.id }}"
                                                                          t-attf-data-pricelist="{{ price.id }}"
                                                                          t-attf-data-availability_plan="{{ select_availability_plan.id }}"
                                                                          t-attf-data-date="{{ date_list[room_day] }}"
                                                                          data-edit="false"
                                                                          t-attf-tabindex="{{ price.id }}1{{room_day}}"
                                                                          style="width:50px; border:0;"
                                                                          type="text"
                                                                          t-att-value="obj.product_id.with_context(quantity=1, consumption_date=date_list[room_day], pricelist=price.id, property=current_property).price"
                                                                          name="price"
                                                                        /> €
                                                                    </p> -->
                                                                    <p class="calendar_config_input" style="text-align:center;margin-right: 0.25rem;">
                                                                        <input
                                                                          t-attf-data-room="{{ obj.id }}"
                                                                          t-attf-data-pricelist="{{ price.id }}"
                                                                          t-attf-data-availability_plan="{{ select_availability_plan.id }}"
                                                                          t-attf-data-date="{{ date_list[room_day] }}"
                                                                          data-edit="false"
                                                                          t-attf-tabindex="{{ price.id }}2{{room_day}}"
                                                                          style="width:50px;"
                                                                          type="text"
                                                                          t-attf-value="{{ list_price['quota'] }}"
                                                                          name="quota"
                                                                        />
                                                                    </p>
                                                                    <p class="calendar_config_input" style="text-align:center;margin-right: 0.25rem;">
                                                                        <input
                                                                          t-attf-data-room="{{ obj.id }}"
                                                                          t-attf-data-pricelist="{{ price.id }}"
                                                                          t-attf-data-availability_plan="{{ select_availability_plan.id }}"
                                                                          t-attf-data-date="{{ date_list[room_day] }}"
                                                                          data-edit="false"
                                                                          t-attf-tabindex="{{ price.id }}3{{room_day}}"
                                                                          style="width:50px;"
                                                                          type="text"
                                                                          t-attf-value="{{ list_price['min_stay'] }}"
                                                                          name="min_stay"
                                                                        />
                                                                    </p>
                                                                    <p class="calendar_config_input" style="text-align:center;">
                                                                        <label class="switch">
                                                                            <input
                                                                              t-attf-data-room="{{ obj.id }}"
                                                                              t-attf-value="{{list_price['closed']}}"
                                                                              t-attf-data-pricelist="{{ price.id }}"
                                                                              t-attf-data-availability_plan="{{ select_availability_plan.id }}"
                                                                              t-attf-data-date="{{ date_list[room_day] }}"
                                                                              data-edit="false"
                                                                              t-attf-tabindex="{{ price.id }}7{{room_day}}"
                                                                              name="closed"
                                                                              type="checkbox"
                                                                            />
                                                                            <span class="slider round"></span>
                                                                        </label>
