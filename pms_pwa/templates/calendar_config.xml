                <section class="container-fluid o_pms_pwa_roomdoo">
                    <!-- Calendar -->
                    <div class="o_pms_pwa_calendar o_pms_pwa_full_shadow bg-white pt-3 px-5">
                        <div class="row m-0 p-0 mb-2">
                             <!-- button to open/close all configuration rooms -->
                            <!-- <div class="col-6 col-md-3 col-xl-2 offset-md-9 offset-lg-9 offset-xl-10 mt-md-4 pr-0 mt-4">
