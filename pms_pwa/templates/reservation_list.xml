<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="roomdoo_reservation_list" name="Reservation list">
        <t t-call="website.layout">
            <t t-set="page_title" t-value="'Reservas'"/>
            <t t-set="page_counter" t-value="str(len(folios))"/>
            <t t-call="pms_pwa.o_pms_pwa_edit_modal" />
            <div class="o_pms_pwa_roomdoo_reservation_modal" />
            <div class="o_pms_pwa_notifications o_pms_pwa_notifications_regular mt-4">
                <span class="o_pms_notification_title"><i class="fa fa-info-circle mr-1"/> Updates <span class="o_pms_pwa_update_counter ml-1"/></span>
            </div>
            <div class="o_pms_pwa_roomdoo_alerts"/>
            <div class="oe_structure o_pms_pwa_structure mt-4">
                <section class="container-fluid o_pms_pwa_roomdoo_list">
                    <div class="o_pms_pwa_full_shadow bg-white p-4">
                        <form method="post" t-att-class="_classes">
                            <div class="row">
                                <div class="col-9 col-md-9 col-lg-5">
                                    <input type="text" name="search" class="form-control o_pmw_pwa_search_input" placeholder="Search" title="Search..." />
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                </div>
                                <div class="col-3 col-md-3 col-lg-7">
                                    <span class="dropdown">
                                        <a
                                            class="btn o_pms_pwa_float_right"
                                            href="#" data-toggle="modal" data-target="#o_pms_pwa_filters_modal"
                                            rel="nofollow">
                                            <span class="d-none d-lg-flex align-self-center">
                                                FILTERS <i class="fa fa-angle-left"/>
                                            </span>
                                            <i class="fa fa-filter d-lg-none"></i>
                                        </a>
                                    </span>
                                    <a t-attf-href="?ready_for_checkin=true" label="Checkins" class="btn o_pms_pwa_button_filter">
                                        <img src="/pms_pwa/static/img/svg/icon_arrival.svg" width="18px" alt="Checkins" class="img-responsive"/>
                                    </a>
                                    <a t-attf-href="?in_house=true" label="Dentro" class="btn o_pms_pwa_button_filter">
                                        <img src="/pms_pwa/static/img/svg/icon_house.svg" width="18px" alt="Dentro" class="img-responsive" />
                                    </a>
                                    <a t-attf-href="?ready_for_checkout=true" label="Checkouts" class="btn o_pms_pwa_button_filter">
                                        <img src="/pms_pwa/static/img/svg/icon_exit.svg" width="18px" alt="Checkouts" class="img-responsive" />
                                    </a>
                                </div>
                                <t t-call="pms_pwa.roomdoo_filters_modal">
                                    <t t-set="post" t-value="post"/>
                                    <t t-set="search" t-value="search"/>
                                </t>
                            </div>
                        </form>

                        <div class="tags_holder">
                            <span t-if="search and search != ''">
                                Search<span t-esc="search"/>
                                <button
                                    type="button" class="close"
                                    data-tag="search" data-dismiss="modal"
                                    aria-label="Close"><span class="fa fa-times o_pms_pwa_tag_close" /></button>
                            </span>
                            <t t-if="post" t-foreach="post" t-as="val">
                                <span t-if="post[val] != '' and val != 'ready_for_checkin' and val != 'in_house' and val != 'ready_for_checkout'">
                                    <span class="o_pms_tag_index" t-esc="val"/> <span t-esc="post[val]"/>
                                    <button
                                        type="button" class="close"
                                        t-att-data-tag="val" data-dismiss="modal"
                                        aria-label="Close"><span class="fa fa-times o_pms_pwa_tag_close" /></button>
                                </span>
                                <span t-if="post[val] != '' and val == 'ready_for_checkin'">
                                    <span class="o_pms_tag_index">Checkins</span> <span t-esc="post[val]"/>
                                    <button
                                        type="button" class="close"
                                        t-att-data-tag="val" data-dismiss="modal"
                                        aria-label="Close"><span class="fa fa-times o_pms_pwa_tag_close" /></button>
                                </span>
                                <span t-if="post[val] != '' and val == 'in_house'">
                                    <span class="o_pms_tag_index">Dentro</span> <span t-esc="post[val]"/>
                                    <button
                                        type="button" class="close"
                                        t-att-data-tag="val" data-dismiss="modal"
                                        aria-label="Close"><span class="fa fa-times o_pms_pwa_tag_close" /></button>
                                </span>
                                <span t-if="post[val] != '' and val == 'ready_for_checkout'">
                                    <span class="o_pms_tag_index">Checkouts</span> <span t-esc="post[val]"/>
                                    <button
                                        type="button" class="close"
                                        t-att-data-tag="val" data-dismiss="modal"
                                        aria-label="Close"><span class="fa fa-times o_pms_pwa_tag_close" /></button>
                                </span>
                            </t>
                        </div>

                        <div class="table-wrapper table-responsive" style="min-height: 300px;">
                            <table class="table table-hover o_pms_pwa_reservation_list_table" id="o_pms_pwa_reservation_list_table">
                                <thead>
                                    <tr>
                                        <th class="o_pms_pwa_reservation_table_header">Guest</th>
                                        <th class="o_pms_pwa_priority-1">ID Res</th>
                                        <th>Room</th>
                                        <!-- <th class="text-center">State</th> -->
                                        <th>Check in</th>
                                        <th>Check out</th>
                                        <th class="text-center o_pms_pwa_priority-2">Sales channel</th>
                                        <th class="text-center o_pms_pwa_priority-3">Total</th>
                                        <th class="text-center">Outstanding</th>
                                        <!-- <th class="text-center">Room qty</th> -->
                                        <th class="o_pms_pwa_priority-5">Requests</th>
                                        <th class="o_pms_pwa_priority-4">Services</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody class="o_pms_pwa_reservation_scroll">
                                    <t t-foreach="folios" t-as="folio">
                                        <t t-set="reservations" t-value="folio.reservation_ids"/>
                                        <t t-if="len(reservations) &gt; 1">
                                            <t t-call="pms_pwa.roomdoo_reservation_accordion">
                                                <t t-set="folio" t-value="folio"/>
                                            </t>
                                            <t t-foreach="reservations" t-as="obj">
                                                <tr t-if="obj_last" t-attf-class="o_pms_pwa_reservation o_pms_pwa_accordion_padding collapse accordion_{{folio.id}} o_pms_pwa_accordion_last_item"
                                                    t-att-data-id="obj.id"
                                                    t-attf-data-loop="{{obj_last}}"
                                                    t-att-id="'reservation_'+ str(obj.id)"
                                                    role="tabpanel">
                                                    <t t-call="pms_pwa.roomdoo_reservation_item">
                                                        <t t-set="obj" t-value="obj"/>
                                                    </t>
                                                </tr>
                                                <tr t-else="" t-attf-class="o_pms_pwa_reservation o_pms_pwa_accordion_padding collapse accordion_{{folio.id}}"
                                                    t-att-data-id="obj.id"
                                                    t-attf-data-loop="{{obj_last}}"
                                                    t-att-id="'reservation_'+ str(obj.id)"
                                                    role="tabpanel">
                                                    <t t-call="pms_pwa.roomdoo_reservation_item">
                                                        <t t-set="obj" t-value="obj"/>
                                                    </t>
                                                </tr>

                                            </t>
                                        </t>
                                        <t t-else="">
                                            <t t-foreach="reservations" t-as="obj">
                                                <tr class="o_pms_pwa_reservation"
                                                    t-att-id="'reservation_'+ str(obj.id)"
                                                    t-att-data-id="obj.id">
                                                    <t t-call="pms_pwa.roomdoo_reservation_item">
                                                        <t t-set="obj" t-value="obj"/>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
            <t t-if="int(pager['page_count']) > 1">
                <div class="page-load-status">
                    <p class="infinite-scroll-request">
                        <div class="loader-ellips">
                            <span class="loader-ellips__dot"></span>
                            <span class="loader-ellips__dot"></span>
                            <span class="loader-ellips__dot"></span>
                            <span class="loader-ellips__dot"></span>
                        </div>
                    </p>
                </div>
                <div t-if="pager" class="o_portal_pager text-center">
                    <div class="o_pms_pwa_reservation_list_pagination">
                        <t t-if="int(pager['page']['num']) + 1 &lt;= int(pager['page_count'])">
                            <a class="o_pms_pwa_reservation_list_pagination_next" t-att-href="pager['page_next']['url']">
                                Page <span t-esc="int(pager['page']['num']) + 1"/>
                            </a>
                        </t>
                        <span id="max-page" class="max-page" t-esc="pager['page_count']" style="display: none"/>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="roomdoo_reservation_accordion" name="Roomdoo reservation accordion">
        <t t-set="folio_partner_id" t-value="folio.reservation_ids[0].partner_id"/>
        <tr class="o_pms_pwa_reservation accordion md-accordion"
            t-att-id="'accordion_'+str(folio.id)"
            data-toggle="collapse" aria-expanded="false"
            t-att-data-target="'.accordion_'+str(folio.id)"
            role="tablist" aria-multiselectable="true">
            <td class="first-col">
                <div class="o_pms_pwa_info">
                    <div>
                        <img t-att-src="website.image_url(folio.partner_id if folio.partner_id else folio_partner_id, 'image_128')"
                            width="40px"
                            class="img-thumbnail rounded-circle o_pms_pwa_img_rounded_bg"
                            t-att-title="folio.partner_id.name if folio.partner_id else folio_partner_id.name"
                            t-att-alt="folio.partner_id.name if folio.partner_id else folio_partner_id.name"/>
                        <t t-set="pending_nots" t-value="len(folio.message_ids.filtered(lambda x: user_id.partner_id in x.notified_partner_ids).sorted(key=lambda x: x.date))"/>
                        <sup t-att-class="'o_pms_pwa_badge_position' + (' visible' if (pending_nots and pending_nots > 0) else ' invisible')">
                            <t t-esc="pending_nots"/>
                        </sup>
                    </div>
                    <div class="o_pms_pwa_w66">
                        <span class="text-left o_pms_pwa_info_name">
                            <t t-esc="folio.partner_id.name if folio.partner_id else folio_partner_id.name"/>
                        </span>
                        <br />
                        <span class="text-left">
                            <a class="text-left" t-att-href="'tel:' + str(folio.partner_id.mobile or folio.partner_id.phone)
                                if folio.partner_id else str(folio_partner_id.mobile or folio_partner_id.phone)">
                                <t t-esc="(folio.partner_id.mobile or folio.partner_id.phone)
                                    if folio.partner_id else (folio_partner_id.mobile or folio_partner_id.phone)"/>
                            </a>

                        </span>
                        <span class="o_pms_pwa_info_num text-right">
                            <!-- <i class="fa fa-user text-rigth"/> -->
                            <i class="fa fa-angle-down"></i>
                            <!-- <t t-if="folio.folio_total_adults" t-esc="folio.folio_total_adults"/> -->
                            <t t-if="folio.reservation_ids" t-esc="len(folio.reservation_ids)"/>
                        </span>
                    </div>
                </div>
            </td>
            <td class="o_pms_pwa_lh45 o_pms_pwa_priority-1">
                <t t-esc="folio.name"/>
            </td>
            <td class="o_pms_pwa_lh45">

            </td>
            <!-- <td class="o_pms_pwa_lh45 text-center">
                <t t-if="folio.state" t-esc="folio.state"/>
            </td> -->
            <td>
                <t t-esc="min(folio.reservation_ids.mapped('checkin'))" t-options='{"widget":"date"}'/>
            </td>
            <td>
                <t t-esc="max(folio.reservation_ids.mapped('checkin'))" t-options='{"widget":"date"}'/>
            </td>
            <td class="text-center o_pms_pwa_priority-2">

            </td>
            <td class="o_pms_pwa_lh45 text-center o_pms_pwa_priority-3">
                <!-- <t t-esc="folio.amount_total"/> -->
            </td>
            <td class="o_pms_pwa_lh45 text-center">
                <!-- <t t-esc="folio.pending_amount"/> -->
            </td>
            <!-- <td class="o_pms_pwa_lh45 text-center">
                <t t-esc="folio.number_of_rooms"/>
            </td> -->
            <td class="o_pms_pwa_lh45 o_pms_pwa_priority-5">
                <t t-if="folio.internal_comment" t-esc="folio.internal_comment"/>
            </td>
            <td class="o_pms_pwa_lh45 o_pms_pwa_priority-4">
            </td>
            <td class="o_pms_pwa_td_services">

            </td>
        </tr>
    </template>

    <template id="roomdoo_reservation_item" name="Roomdoo reservation item">
        <td class="first-col">
            <div class="o_pms_pwa_info">
                <div>
                    <img t-att-src="website.image_url(obj.partner_id, 'image_128')"
                        width="40px"
                        class="img-thumbnail rounded-circle o_pms_pwa_img_rounded_bg"
                        t-att-title="obj.partner_name" t-att-alt="obj.partner_name"/>
                    <t t-set="pending_nots" t-value="len(obj.message_ids.filtered(lambda x: user_id.partner_id in x.notified_partner_ids).sorted(key=lambda x: x.date))"/>
                    <sup t-att-class="'o_pms_pwa_badge_position' + (' visible' if (pending_nots and pending_nots > 0) else ' invisible')">
                        <t t-esc="pending_nots"/>
                    </sup>
                </div>
                <div class="o_pms_pwa_w66">
                    <span class="text-left o_pms_pwa_info_name">
                        <t t-esc="obj.partner_name"/>
                    </span>
                    <br />
                    <span class="text-left">
                        <a t-att-href="'tel:' + str(obj.partner_mobile)">
                            <t t-esc="obj.partner_mobile"/>
                        </a>
                    </span>
                    <span class="o_pms_pwa_info_num">
                        <!-- <i class="fa fa-user"/> -->
                        <img src="/pms_pwa/static/img/svg/icon-usuario.svg" alt="user icon" title="adults" width="7" />
                        <t t-if="obj.adults" t-esc="obj.adults"/>
                    </span>
                </div>
            </div>
            <div class="progress mt-2">
                <div t-att-class="'progress-bar '
                    + ('bg-success ' if obj.state in ('onboard') else ' ')
                    + ('bg-light ' if obj.state in ('done', 'cancelled', 'no_show', 'no_checkout') else ' ')
                    + ('bg-success ' if obj.state in ('confirm') and obj.ratio_checkin_data &gt; 75 else ' ')
                    + ('bg-warning ' if obj.state in ('confirm') and  75 &gt; obj.ratio_checkin_data &gt; 50 else ' ')
                    + ('bg-danger ' if obj.state in ('confirm') and  obj.ratio_checkin_data &lt; 50 else ' ')"
                    role="progressbar" t-att-style="'width:'+ str(obj.checkins_ratio if obj.state in ('onboard') else obj.ratio_checkin_data) + '%'"
                    t-att-aria-valuenow="obj.checkins_ratio if obj.state in ('onboard') else obj.ratio_checkin_data" aria-valuemin="0"
                    aria-valuemax="100"></div>
            </div>
        </td>
        <td class="o_pms_pwa_lh45 o_pms_pwa_priority-1">
            <t t-esc="obj.name"/>
        </td>
        <td class="o_pms_pwa_lh45">
            <t t-esc="obj.rooms"/>
            <br/><span class="o_pms_pwa_wler" t-esc="obj.room_type_id.default_code"/>

        </td>
        <!-- <td class="o_pms_pwa_lh45 text-center">
            <t t-if="obj.state" t-esc="obj.state"/>
        </td> -->
        <td>
            <span t-field="obj.checkin" t-field-options='{"widget":"date"}' /><br/><span class="o_pms_pwa_wler" t-esc="obj.arrival_hour"/>
        </td>
        <td>
            <span t-field="obj.checkout" /><br/><span class="o_pms_pwa_wler" t-esc="obj.departure_hour"/>
        </td>
        <td class="text-center o_pms_pwa_priority-2">
            <img t-if="obj.agency_id" t-att-src="website.image_url(obj.agency_id, 'image_128')"
                width="80"
                t-att-title="obj.agency_id.name"
                t-att-alt="obj.agency_id.name"/>
            <span t-else="">
                <span t-if="obj.channel_type_id" t-esc="obj.channel_type_id.name"/><br/>
                <span t-if="obj.channel_type_id" class="o_pms_pwa_wler" t-esc="obj.user_id.name"/><br/>
            </span>
        </td>
        <td class="o_pms_pwa_lh45 text-center o_pms_pwa_priority-3">
            <!-- t-field-options='{"widget": "monetary", "display_currency": "currency"}' -->
            <span t-field="obj.folio_id.amount_total" />
        </td>
        <td class="o_pms_pwa_lh45 text-center">
            <span t-field="obj.folio_id.pending_amount" />
        </td>
        <!-- <td class="o_pms_pwa_lh45 text-center">

        </td> -->
        <td class="o_pms_pwa_lh45 o_pms_pwa_priority-5">
            <t t-if="obj.partner_requests" t-esc="obj.partner_requests"/>
        </td>
        <td class="o_pms_pwa_lh45 o_pms_pwa_priority-4">
            <t t-if="obj.board_service_room_id" t-esc="obj.board_service_room_id.display_name"/>
            <!-- <t t-foreach="list(json.loads(obj.pwa_board_service_tags))" t-as="tag">
                <span class="tags_holder">
                    <span class="o_pms_tag_index">
                        <span>
                            <t t-esc="tag"/>
                        </span>
                    </span>
                </span>
            </t> -->
        </td>
        <td style="white-space: nowrap; " >
            <t t-set="pwa_action_buttons" t-value="json.loads(obj.pwa_action_buttons)"/>
            <t t-set="keys" t-value="list(pwa_action_buttons.keys())"/>
            <button t-if="pwa_action_buttons[keys[0]]" t-att-url="pwa_action_buttons[keys[0]]" t-att-class="'btn o_pms_pwa_default_button_name o_pms_pwa_abutton o_pms_pwa_button_' + str(keys[0]).lower()" type="button">
                <t t-esc="keys[0]"/>
            </button>
            <button t-else="" t-att-class="'disabled btn o_pms_pwa_default_button_name o_pms_pwa_abutton o_pms_pwa_button_' + str(keys[0]).lower()" type="button">
                <t t-esc="keys[0]"/>
            </button>
            <span class="dropdown">
                <a role="button" class="btn fa fa-ellipsis-v" data-toggle="dropdown" href="#"/>
                <div class="dropdown-menu" aria-labelledby="dLabel">
<!--                    <t t-foreach="pwa_action_buttons" t-as="button">-->
<!--                        <form method="POST">-->
<!--                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>-->
<!--                            <input type="hidden" name="page" t-att-value="page"/>-->
<!--                            <input type="hidden" name="search" t-att-value="search"/>-->
<!--                            <input type="hidden" name="post" t-att-value="post"/>-->
<!--                            <button-->
<!--                                t-att-formaction="pwa_action_buttons[button]"-->
<!--                                class="dropdown-item"-->
<!--                                type="submit">-->
<!--                                <t t-esc="button"/>-->
<!--                            </button>-->
<!--                        </form>-->
<!--                    </t>-->
                    <t t-foreach="pwa_action_buttons" t-as="button">
                        <button
                            t-if="pwa_action_buttons[button]"
                            t-att-url="pwa_action_buttons[button]"
                            t-att-class="'dropdown-item  o_pms_pwa_abutton o_pms_pwa_button_' + str(button).lower()"
                            type="button">
                            <t t-esc="button"/>
                        </button>
                        <button
                            t-else=""
                            t-att-class="'disabled dropdown-item  o_pms_pwa_abutton o_pms_pwa_button_' + str(button).lower()"
                            type="button">
                            <t t-esc="button"/>
                        </button>
                    </t>
                </div>
            </span>
        </td>
    </template>

    <template id="roomdoo_filters_modal" name="Roomdoo filters modal">
        <div class="modal fade o_pms_pwa_right o_pms_pwa_filters_modal"
            tabindex="-1" role="dialog" id="o_pms_pwa_filters_modal" aria-labelledby="o_pms_pwa_filters_modal"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="modal-title" id="modalLabel">Filtros</div>
                        <button class="close" data-dismiss="modal"><span><span class="fa fa-times" /></span></button>
                    </div>
                    <div class="modal-body o_pms_pwa_modal_body">
                        <div class="container-fluid">

                            <form class="form-horizontal" method="post">
                                <div class="form-group form-field">
                                    <div class="row">
                                        <div class="col-12 my-4">
                                            <a t-attf-href="?ready_for_checkin=true" class="btn o_pms_pwa_button_filter"><img src="/pms_pwa/static/img/svg/icon_arrival.svg" width="18px" alt="Checkins" class="img-responsive"/></a>
                                            <a t-attf-href="?in_house=true" class="btn o_pms_pwa_button_filter o_pms_pwa_button_filter_margin"><img src="/pms_pwa/static/img/svg/icon_house.svg" width="18px" alt="Dentro" class="img-responsive" /></a>
                                            <a t-attf-href="?ready_for_checkout=true" class="btn o_pms_pwa_button_filter o_pms_pwa_button_filter_margin"><img src="/pms_pwa/static/img/svg/icon_exit.svg" width="18px" alt="Checkouts" class="img-responsive" /></a>
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="checkin">
                                                Check in
                                            </label>
                                            <input class="form-control o_pms_pwa_daterangepicker"
                                                type="text" name="checkin"
                                                t-att-value="post['checkin'] if post and 'checkin' in post else None"/>
                                            <span class="o_pms_pwa_calendar_icon">
                                                <!-- <span class="fa fa-calendar"/> -->
                                                <img src="/pms_pwa/static/img/svg/calendario-azul.svg" alt="calendar icon" title="calendar" width="20" />
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="checkout">
                                                Check out
                                            </label>
                                            <input class="form-control o_pms_pwa_daterangepicker"
                                                type="text" name="checkout"
                                                t-att-value="post['checkout'] if post and 'checkout' in post else None"/>
                                            <span class="o_pms_pwa_calendar_icon">
                                                <!-- <span class="fa fa-calendar"/> -->
                                                <img src="/pms_pwa/static/img/svg/calendario-azul.svg" alt="calendar icon" title="calendar" width="20" />
                                            </span>
                                        </div>
                                    </div>

                                    <div class="row mt-3">
                                        <div class="col-12">
