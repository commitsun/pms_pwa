                                        <canvas class="o_pms_pwa_doughnut" style="display: block; width: 1110px; height: 555px;" width="1110" height="555" t-att-data-labels="kpi['labels']" t-att-data-label="kpi['label']" t-att-data-data="kpi['data']" t-att-data-background_color="kpi['backgroundColor']" t-att-data-border_color="kpi['borderColor']" t-esc="kpi['ratio']"></canvas>
                                        <span t-esc="kpi['ratio']" class="o_pms_pwa_kpi_ratio d-block d-lg-none d-xl-block" />
                                        <h3 class="o_default_snippet_text text-center" t-esc="kpi['name']" />
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </t>
