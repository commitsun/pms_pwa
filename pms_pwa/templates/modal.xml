<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="o_pms_pwa_edit_modal" name="Edit reservation modal">
        <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" id="o_pms_pwa_editModal" aria-labelledby="o_pms_pwa_editModal" aria-hidden="true">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Change value</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">
                                <span class="fa fa-times" />
                            </span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>
                            Total:
                            <input type="number" id="new_val" />
                        </p>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-pms_pwa btn-radius" id="edit-modal-save">Save</button>
                        <button type="button" class="btn" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <template id="o_pms_pwa_new_reservation_modal" name="New reservation modal">
        <div class="modal fade o_pms_pwa_right o_pms_pwa_new_reservation_modal" tabindex="-1" data-backdrop="static" role="dialog" id="o_pms_pwa_new_reservation_modal" aria-labelledby="o_pms_pwa_new_reservation_modal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="modal-title" id="modalLabel">New reservation</div>
                        <button class="close" data-dismiss="modal">
                            <span>
                                <span class="fa fa-times" />
                            </span>
                        </button>
                    </div>
                    <div class="modal-body o_pms_pwa_modal_body">
                        <div class="container-fluid">

                            <form id="booking_engine_form" class="form-horizontal mt-3" method="post">
                                <div class="form-group form-field pb-3 ">

                                    <div class="row">
                                        <div class="col-12">
                                            <label class="control-label col-12" for="partner_name">
                                                Nombre
                                            </label>
                                            <input class="form-control o_pms_pwa_search_partner" type="text" name="partner_name" placeholder="Name" t-att-value="post['partner_name'] if post and 'partner_name' in post else None" />
                                        </div>
                                    </div>

                                    <div class="row mt-3">
                                        <div class="col-6">
                                            <label class="control-label col-12" for="mobile">
                                                Teléfono
                                            </label>
                                            <input class="form-control" type="text" name="mobile" placeholder="Mobile" t-att-value="post['mobile'] if post and 'mobile' in post else None" />
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="mail">
                                                E-mail
                                            </label>
                                            <input class="form-control" type="text" name="mail" placeholder="Mail" t-att-value="post['mail'] if post and 'mail' in post else None" />
                                        </div>
                                    </div>

                                    <div class="row mt-3">
                                        <div class="col-12">
                                            <label class="control-label col-12" for="checkin">
                                                Check in
                                            </label>
                                            <input class="form-control" type="text" name="range_check_date_modal_reservation" t-att-value="post['checkin'] if post and 'checkin' in post else None" />
                                            <input type="hidden" name="checkin" value="" />
                                            <input type="hidden" name="checkout" value="" />
                                            <span class="o_pms_pwa_calendar_icon">
                                                <!-- <span class="fa fa-calendar"/> -->
                                                <img src="/pms_pwa/static/img/svg/calendario-azul.svg" alt="calendar icon" title="calendar" width="20" />
                                            </span>
                                        </div>
                                    </div>


                                    <div class="row mt-3">
                                        <div class="col-sm-12">
                                            <h4>Channel type and pricelist</h4>
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="pricelist">
                                                Pricelist
                                            </label>
                                            <select data-select="allowed_pricelists" class="form-control o_website_form_input o_domain_leaf_operator_select o_input call_booking_engine" name="pricelist_id" />
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="reservation_type">
                                                Type
                                            </label>
                                            <select class="form-control o_website_form_input o_domain_leaf_operator_select o_input call_booking_engine" name="reservation_type" >
                                                <option value="normal">Normal</option>
                                                <option value="staff">Staff</option>
                                                <option value="out">Fuera de servicio</option>
                                            </select>
                                        </div>


                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-6">
                                            <label class="control-label col-12" for="agency_id">
                                                Agency
                                            </label>
                                            <select data-select="allowed_agency_ids" class="form-control o_website_form_input o_domain_leaf_operator_select o_input call_booking_engine" name="agency_id" />
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="channel_type_id">
                                                Channel type
                                            </label>
                                            <select data-select="allowed_channel_type_ids" class="form-control o_website_form_input o_domain_leaf_operator_select o_input call_booking_engine" name="channel_type_id" />
                                        </div>

                                    </div>
                                    <div class="row mt-3">

                                        <div class="col-6">
                                            <!-- <label class="control-label col-12" for="segmentation_ids">
                                                Segmentation
                                            </label> -->
                                            <select data-select="allowed_segmentations" multiple="true" data-style="form-control o_pms_pwa_multiselect" class="selectpicker w-100" data-live-search="true" name="segmentation_ids" title="Segmentation" />
                                            <!-- <select t-attf-data-select="allowed_segmentations" multiple="multiple" class="form-control o_website_form_input o_domain_leaf_operator_select o_input select2" name="segmentation_ids"/> -->
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="board_service_room_id">
                                                Board Service
                                            </label>
                                            <select data-select="allowed_board_services" class="form-control o_website_form_input o_domain_leaf_operator_select o_input call_booking_engine" name="board_service_room_id" />
                                        </div>
                                    </div>

                                    <div class="row mt-3 sale_category_id" >
                                        <div class="col-12">
                                            <label class="control-label col-12" for="sale_category_id">
                                                Sale category
                                            </label>
                                            <select data-select="allowed_sale_category_ids" class="form-control o_website_form_input o_domain_leaf_operator_select o_input call_booking_engine" name="sale_category_id" />
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-12">
                                            <h4>Group</h4>
                                        </div>

                                        <div class="col-6">
                                            <label class="control-label col-12" for="agrupation_type">
                                                Agrupación
                                            </label>
                                            <select class="form-control o_website_form_input o_domain_leaf_operator_select o_input call_booking_engine" name="agrupation_type" >
                                                <option value="all">Todas</option>
                                                <option value="room_type">Tipo de habitación</option>
                                                <option value="ubication">Ubicación</option>
                                            </select>
                                        </div>
                                        <div class="col-6">
                                            <label class="control-label col-12" for="amenity_ids">
                                                Amenities
                                            </label>
                                            <select data-select="allowed_amenity_ids" class="form-control o_website_form_input o_domain_leaf_operator_select o_input" name="amenity_ids" />
                                        </div>

                                        <div class="col-12 mt-3">
                                            <table id="bookengine_table" class="table table-condensed">
                                                <t t-esc="groups"></t>
                                                <t t-foreach="groups" t-as="group">
                                                    <tr>
                                                        <td class="col-4">
                                                            <t t-esc="group['name']"></t> <br />( disponibles <t t-esc="group['max_rooms']"></t> )
                                                        </td>
                                                        <td class="col-4">
                                                            <button class="btn" t-attf-onclick="document.getElementById('groupquantity{{i}}').stepDown(1)" t-attf-data-target="#collapseme{{i}}">-</button>
                                                            <input name="count_rooms_selected" class="num-control" t-attf-id="groupquantity{{i}}" type="number" min="0" t-attf-max="{{group['max_rooms']}}" />
                                                            <button class="btn" t-attf-onclick="document.getElementById('groupquantity{{i}}').stepUp(1)" t-attf-data-target="#collapseme{{i}}">+</button>
                                                        </td>
                                                        <td class="col-4">
                                                            Precio: <t t-esc="group['price_per_group']" />
                                                        </td>
                                                    </tr>
                                                    <tr t-attf-id="collapseme{{i}}" class="collapse">
                                                        <td class="col-8" colspan="2">
                                                            <label class="control-label" for="preferred_room_id">
                                                                Habitación
                                                            </label>
                                                            <select data-select="free_room_ids" class="form-control o_website_form_input o_domain_leaf_operator_select o_input" name="preferred_room_id" />
                                                        </td>
                                                        <td class="col-4">
                                                            <label class="control-label" for="adults">
                                                                Adultos
                                                            </label>
                                                            <button class="btn" t-attf-onclick="document.getElementById('quantity{{i}}').stepDown(1)">-</button>
                                                            <input name="adults" class="num-control" t-attf-id="quantity{{i}}" type="number" min="1" max="max_adults" />
                                                            <button class="btn" t-attf-onclick="document.getElementById('quantity{{i}}').stepUp(1)">+</button>
                                                        </td>

                                                    </tr>
                                                </t>
                                            </table>
                                        </div>

                                    </div>
                                    <div class="o_pms_pwa_shadow mt-3">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="row mx-2">
                                                    <div class="o_pms_pwa_total_title col-12">
                                                        <h4>Impuestos</h4>
                                                    </div>
                                                    <div class="o_pms_pwa_total_price col-12">
                                                        <strong  class="price_taxes" >0</strong>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="row mx-2">
                                                    <div class="o_pms_pwa_total_title col-12">
                                                        <h4>Total</h4>
                                                    </div>
                                                    <div class="o_pms_pwa_total_price col-12" >
                                                        <strong class="price_total" >0</strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mt-3 mb-3">
                                        <div class="col-12 text-center">
                                            <input type="hidden" name="id"/>
                                            <input class="btn btn-message" type="submit" value="Submit" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

</odoo>
